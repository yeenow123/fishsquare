<%= form_for(@catch) do |f| %>
  <% if @catch.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@catch.errors.count, "error") %> prohibited this catch from being saved:</h2>

      <ul>
      <% @catch.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if params[:check_in_id] %>
    <%= f.hidden_field :check_in_id, :value => params[:check_in_id].to_i %>
  <% end %>

  <div class="form-group">
    <%= f.label :fishing_style %><br>
    <%= f.select(:fishing_style, options_for_select([['Trawling', 'Trawling'], ['Netting', 'Netting'], ['Line Fishing','Line Fishing'], ['Trapping','Trapping'], ['Speargun','Speargun']]), {}, {:class => 'form-control'} ) %>
  </div>
  <div class="form-group">
    <%= f.label :species %><br>
    <%= f.text_field :species, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :notes %><br>
    <%= f.text_area :notes, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.submit "Submit", class: 'btn btn-default' %>
  </div>
<% end %>
