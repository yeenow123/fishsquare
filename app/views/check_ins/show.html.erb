<div class="container">

<% if notice && notice.length > 0 %>
<div class="alert alert-info alert-dismissable">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
<p id="notice"><%= notice %></p>
</div>
<% end %>


<div style="border-bottom: 1px solid #e5e5e5;">
	<h2>
  		<%= @check_in.report_type %>
	</h2>
</div>

<% if @check_in.notes && @check_in.notes.length > 0 %>
	<div class="form-group">
  		<strong>Notes:</strong>
  		<%= @check_in.notes %>
	</div>
<% end %>

<%= render :partial => '/vessels/vessel_partial' %>


<% unless @check_in.check_in_image %>
  <div class="form-group">
    <form action="/check_in/check_in_images/new/<%=@check_in.id%>">
        <input type="submit" value="Add Image + " class="btn btn-default btn-lg">
    </form>
  </div>
<% else %>
  Existing Image Shown
<% end %>


<br><br>
<%= link_to 'Edit', edit_check_in_path(@check_in) %> |
<%= link_to 'Back', check_ins_path %>

</div>